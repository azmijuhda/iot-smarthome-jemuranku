<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JemuranKu"
            android:textColor="#fff"
            android:textSize="10pt"
            android:textAlignment="center"
            android:fontFamily="@font/goose_slight"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-70dp">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/TManual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Atap Otomatis"
                        android:textColor="#000"
                        android:fontFamily="@font/goose"
                        android:textSize="8pt"
                        android:layout_marginLeft="10dp"
                        />
                    <Switch
                        android:gravity="right"
                        android:layout_marginLeft="80dp"
                        android:id="@+id/swManual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goose_light" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/btBukaAtap"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:visibility="visible"
                        android:text="Buka Atap"
                        android:background="#2980b9"
                        android:textColor="#fff"
                        android:fontFamily="@font/goose_norm"
                        android:layout_gravity="center"
                        android:enabled="true"
                        android:layout_marginRight="15dp"
                        />
                    <Button
                        android:id="@+id/btTutupAtap"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:visibility="visible"
                        android:text="Tutup Atap"
                        android:fontFamily="@font/goose_norm"
                        android:enabled="false"
                        android:background="#95a5a6"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/Tsuhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29"
                android:layout_marginTop="5dp"
                android:textColor="#404040"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:fontFamily="@font/naka"
                android:layout_marginLeft="98dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="135dp"
                android:text="Â°C"
                android:fontFamily="@font/goose_slight"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/celsius"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Suhu"
                    android:textColor="#000"
                    android:fontFamily="@font/goose_norm"
                    android:textSize="9pt"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-30dp">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/Tkelembapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_marginTop="5dp"
                android:textColor="#404040"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:fontFamily="@font/naka"
                android:layout_marginLeft="98dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="135dp"
                android:text="%"
                android:fontFamily="@font/goose_slight"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/humidity"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kelembapan"
                    android:textColor="#000"
                    android:fontFamily="@font/goose_norm"
                    android:textSize="9pt"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-30dp">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/clouds"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Kondisi Langit"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/goose_norm"
                        android:textSize="9pt"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/TkondisiLangit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terang Benerang"
                        android:textColor="#000"
                        android:textSize="8pt"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/goose" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-30dp">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/roof"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Kondisi Atap"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/goose_norm"
                        android:textSize="9pt"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/TkondisiAtap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tertutup"
                        android:textColor="#000"
                        android:textSize="8pt"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/goose" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>